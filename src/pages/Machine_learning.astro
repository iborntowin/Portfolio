---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Z from '../components/Z.astro';
import GalleryItem from '../components/GalleryItem.astro';
import photo1 from "../images/1.jpeg";
import photo2 from "../images/2.jpeg";
import photo3 from "../images/3.jpeg";
import photo4 from "../images/4.jpeg";
import photo5 from "../images/5.jpeg";
import photo6 from "../images/6.jpeg";
---


<Layout title="Machine learning">
    <main>
      <section class="about-section">
        <h1 class="about-title">Anomalie<span class="text-gradient"> no problem  </span>âœ…</h1>
    <ul class="gallery">
        <p class="about-description"></p>
        <GalleryItem 
        src={photo1}
        alt="Photo 1"
    />
    <GalleryItem 
        src={photo2}
        alt="Photo 2"
    />
    <GalleryItem 
        src={photo3}
        alt="Photo 3"
    />
    <GalleryItem 
        src={photo4}
        alt="Photo 4"
    />
    <GalleryItem 
        src={photo5}
        alt="Photo 5"
    />
    <GalleryItem 
        src={photo6}
        alt="Photo 6"
    />
      </section>
      
      <section class="link-section">
        <ul class="link-card-grid">
          <Z href="/skills" title="Skills" body="Go back to the skills page" />
        </ul>
      </section>
    </main>
  </Layout>

<style>
    .gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        padding: 1rem;
        justify-content: center;
    }
    .about-photo {
    width: 100%; 
    height: auto; /* Maintain the aspect ratio */
    max-width: 100%; /* Ensure the image does not exceed its natural size */
    border-radius: 8px; /* Optional: Add border-radius for rounded corners */
  }
  .text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
  main {
    margin: auto;
    padding: 2rem;
    max-width: 800px;
  }

  .about-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .about-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .about-description {
    font-size: 1.2rem;
    color: #666;
  }

  .link-section {
    text-align: center;
  }

  .section-heading {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    padding: 0;
    list-style: none;
    margin: 0 auto;
  }
  .about-description-container {
    border: 2px solid var(--accent);
    border-radius: 0.6rem;
    padding: 1.5rem;
    margin: 2rem 0;
    font-size: 1.2rem; /* Increase the font size */
  }
  @media (max-width: 600px) {
    .about-title {
      font-size: 1.5rem;
    }
    .about-description {
      font-size: 1rem;
    }
    .section-heading {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
    .link-card-grid {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }
  }
</style>
